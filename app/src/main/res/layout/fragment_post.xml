<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="app.forum.PostFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:textSize="16sp"
                android:id="@+id/thread_firstPage"
                android:background="@android:color/transparent"
            />
            <ImageButton
                android:id="@+id/thread_previousPage"
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="?android:attr/homeAsUpIndicator"
                android:background="@android:color/transparent"
            />
            <ImageButton
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:id="@+id/thread_nextPage"
                android:src="?android:attr/homeAsUpIndicator"
                android:rotation="180"
                android:background="@android:color/transparent"
            />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="16sp"
                android:id="@+id/thread_lastPage"
                android:background="@android:color/transparent"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorCategory">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/post_title"
                android:textSize="22sp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="16sp"
                android:id="@+id/thread_currentPage"
            />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_listView"
            android:textSize="18sp">
        </ListView>


    </LinearLayout>

    <ImageButton
        android:id="@+id/post_newpost"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/colorAccent"
        android:background="@android:drawable/ic_input_add"/>
</RelativeLayout>

